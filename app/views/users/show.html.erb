<% provide(:title, @user.name) %>

<h1>マイページ</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <h2><%= @user.email %></h2>
      <h2>登録企業数：<%= @user.corporates.count %></h2>
      <h2><%= link_to "企業を登録する", new_corp_path %></h2>
    </section>
  </aside>
  <div class="col-md-8">
    <section class="corp-list">
      <h1>登録企業一覧</h1>
      <% if @user.corporates.any? %>
        <ul class="corp-list">
          <%= render @corporates %>
        </ul>
      <% end %>
    </section>
  </div>
</div>