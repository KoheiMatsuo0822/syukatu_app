<%= form_with(model: @corporate, local: true) do |f| %>
  <%= render 'shared/corporate_error_messages' %>
    
  <%= f.label :corp_name, "企業名(必須)" %>
  <%= f.text_field :corp_name, class: 'form-control' %>
      
  <div class="form-group">
  <%= f.label :aspiration, "志望度(必須)" %>
  <%= f.select :aspiration, ["A", "B", "C"], { include_blank: '選択してください'}, { class: 'form-control', require: true } %>
  </div>
      
  <%= f.label :mypage_url, "採用マイページURL" %>
  <%= f.text_field :mypage_url, class: 'form-control' %>
      
  <%= f.label :mypage_id, "マイページID" %>
  <%= f.text_field :mypage_id, class: 'form-control' %>
      
  <%= f.label :mypage_password, "マイページパスワード" %>
  <%= f.text_field :mypage_password, class: 'form-control' %>
  
  <div class="form-group">
  <%= f.label :next_selection, "次回の選考" %>
  <%= f.select :next_selection, ["説明会", "ES提出", "1次選考", "２次選考", "3次選考", "最終選考", "内定", "落選"], { include_blank: '選択してください'}, { class: 'form-control' } %>
  </div>
  
  <div class="form-group">
    <%= f.label :event_day, "次回イベントの日付" %>
    <%= f.date_field :event_day, class: 'form-control' %>
  </div>
      
  <%= f.label :remarks, "備考" %>
  <%= f.text_area :remarks,　size: "50×20", class: 'form-control' %>
      
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>