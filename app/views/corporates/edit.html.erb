<h1>企業の編集</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_with(model: @corporate, local: true) do |f| %>
    
      <%= f.label :corp_name, "企業名" %>
      <%= f.text_field :corp_name, class: 'form-control' %>
      
      <%= f.label :aspiration, "志望度" %>
      <%= f.text_field :aspiration, class: 'form-control' %>
      
      <%= f.submit "企業情報を更新する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>