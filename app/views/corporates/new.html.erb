<div class="row">
  <div class="col-md-6">
    <%= form_with(model: @corporate, local: true) do |f| %>
    
      <%= f.label :corp_name %>
      <%= f.text_field :corp_name, class: 'form-control' %>
      
      <%= f.label :aspiration %>
      <%= f.text_field :aspiration, class: 'form-control' %>
      
      <%= f.submit "企業を登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>