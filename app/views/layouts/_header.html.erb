<header class="navbar  navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">

      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    <%= link_to root_path, id: "logo" do %>
      <%= image_tag "logo.png" %>
    <% end %>
    </div>
    <nav>
      <ul id="navbar" class="nav navbar-nav navbar-collapse collapse">
        <% if logged_in? %>
          
          <% if current_user == @user && current_user.admin? %>
            <li><%= link_to "ユーザー一覧", index_path %></li>
          <% end %>
          <li><%= link_to "ユーザー：#{current_user.name}", current_user %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ホーム",   root_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>